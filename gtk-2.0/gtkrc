gtk-menu-images     = 0
gtk-button-images   = 0
gtk-icon-sizes      = "panel-menu=16,16:panel=8,8:gtk-button=16,16:gtk-large-toolbar=16,16"


style "default"
{

    GtkRange::trough_border         = 0 # no borders on scrollbars
    GtkRange::stepper_size          = 11 # space for scrollbar arrows
    GtkPaned::handle_size           = 3
    GtkRange::slider_width          = 11
    GtkVScale::slider_length        = 18
    GtkVScale::slider_width         = 11
    GtkHScale::slider_length        = 18
    GtkHScale::slider_width         = 11
    GtkStatusbar::shadow_type       = GTK_SHADOW_NONE
    GtkSpinButton::shadow_type      = GTK_SHADOW_NONE
    GtkMenuBar::internal_padding    = 0
    GtkProgressBar::min-vertical-bar-width = 11
    GtkProgressBar::min-horizontal-bar-height = 11
    #GtkButton::default_border         = { 0, 0, 0, 0 }
    #GtkButton::default_outside_border     = { 0, 0, 0, 0 }

    fg[NORMAL]          = "#696f89" # most text
    fg[ACTIVE]          = "#2e3a45" # text on unfocused tabs
    fg[PRELIGHT]        = "#87ceeb" # text prelight on buttons
    fg[SELECTED]        = "#87ceeb" # selected text on lists
    fg[INSENSITIVE]     = "#2e3a45" # greyed out text

    bg[NORMAL]          = "#12171d" # background
    bg[ACTIVE]          = "#090e14" # selected taskbar items
    bg[PRELIGHT]        = "#12171d" # button prelight
    bg[SELECTED]        = "#2e3a45"
    bg[INSENSITIVE]     = "#090e14" # greyed out buttons

    base[NORMAL]        = "#090e14" # window background
    base[ACTIVE]        = "#2e3a45" # Menu active item in inactive window
    base[PRELIGHT]      = "#090e14" # menubar outline colour
    base[SELECTED]      = "#2e3a45" # Inactive Entry bg
    base[INSENSITIVE]   = "#090e14" # Menu active item in active window

    text[NORMAL]        = "#696f89" # Text in window, arrows
    text[ACTIVE]        = "#696f89" # Insensitive arrows
    text[PRELIGHT]      = "#87ceeb" # Active text in active window
    text[SELECTED]      = "#87ceeb" # Active text in inactive window
    text[INSENSITIVE]   = "#2e3a45" # Text on Mouseover

    xthickness = 2
    ythickness = 2

    engine "pixmap"
    {

        ### SHADOWS ###

        image
        {
            function        = SHADOW
            shadow          = IN
            recolorable     = FALSE
            file            = "Shadows/shadow-in.png"
            border          = { 1, 1, 1, 1 }
            stretch         = TRUE

        }

        image
        {
            function        = SHADOW
            shadow          = OUT
            recolorable     = TRUE
            file            = "Shadows/shadow-out.png"
            #border          = { 1, 1, 1, 1 }
            stretch         = TRUE
        }

        image
        {
            function        = SHADOW
            shadow          = ETCHED_IN
            recolorable     = TRUE
            file            = "Frame-Gap/frame1.png"                                
            border          = { 1, 1, 1, 1 }
            stretch         = TRUE
        }

        image
        {
            function        = SHADOW
            shadow          = ETCHED_OUT
            recolorable     = TRUE
            file            = "Shadows/shadow-none.png"
            border          = { 1, 1, 1, 1 }
            stretch         = TRUE
        }

        image
        {
            function        = SHADOW_GAP
            recolorable     = TRUE
            file            = "Frame-Gap/frame1.png"
            border          = { 1, 1, 1, 1 }
            stretch         = TRUE
            gap_start_file  = "Frame-Gap/frame-gap-start.png"
            gap_start_border= { 2, 0, 2, 0 }
            gap_end_file    = "Frame-Gap/frame-gap-end.png"
            gap_end_border  = { 0, 2, 2, 0 }
            gap_side        = TOP
        }


        ### INVISIBLE SEPERATORS ###

        image
        {
            function        = VLINE
            recolorable     = TRUE
            file            = "Lines/line-v.png"
            border          = { 1, 1, 0, 0 }
            stretch         = TRUE
        }

        image
        {
            function        = HLINE
            recolorable     = TRUE
            file            = "Lines/line-h.png"
            border          = { 0, 0, 1, 1 }
            stretch         = TRUE
        }


        ### FOCUS RINGS ###

        image
        {
            function        = FOCUS
            recolorable     = TRUE
            file            = "Others/focus.png"
            border          = { 1, 1, 1, 1 }
            stretch         = TRUE
        }   


        ### ARROWS ###

        image
        {
            function        = ARROW
            recolorable     = TRUE
            overlay_file    = "Arrows/arrow-up.png"
            overlay_border  = { 0, 0, 0, 0 }
            overlay_stretch = FALSE
            arrow_direction = UP
        }

        image
        {
            function        = ARROW
            state           = NORMAL
            recolorable     = TRUE
            overlay_file    = "Arrows/arrow-down.png"
            overlay_border  = { 0, 0, 0, 0 }
            overlay_stretch = FALSE
            arrow_direction = DOWN
        }

        image
        {
            function        = ARROW
            state           = PRELIGHT
            recolorable     = TRUE
            overlay_file    = "Arrows/arrow-down-prelight.png"
            overlay_border  = { 0, 0, 0, 0 }
            overlay_stretch = FALSE
            arrow_direction = DOWN
        }

        image
        {
            function        = ARROW
            state           = ACTIVE
            recolorable     = TRUE
            overlay_file    = "Arrows/arrow-down-pressed.png"
            overlay_border  = { 0, 0, 0, 0 }
            overlay_stretch = FALSE
            arrow_direction = DOWN
        }

        image
        {
            function        = ARROW
            state           = INSENSITIVE
            recolorable     = TRUE
            overlay_file    = "Arrows/arrow-down-insens.png"
            overlay_border  = { 0, 0, 0, 0 }
            overlay_stretch = FALSE
            arrow_direction = DOWN
        }

        image
        {
            function        = ARROW
            recolorable     = TRUE
            overlay_file    = "Arrows/arrow-left.png"
            overlay_border  = { 0, 0, 0, 0 }
            overlay_stretch = FALSE
            arrow_direction = LEFT
        }

        image
        {
            function        = ARROW
            recolorable     = TRUE
            overlay_file    = "Arrows/arrow-right.png"
            overlay_border  = { 0, 0, 0, 0 }
            overlay_stretch = FALSE
            arrow_direction = RIGHT
        }
    }
}

