{
    # button height, lower is thinner
    ythickness = 1

    engine "pixmap"
    {
        image
        {
            function        = BOX
            detail          = "buttondefault"
            recolorable     = TRUE
            file            = "Buttons/button-default.png"
            border          = { 2, 2, 2, 2 }
            stretch         = TRUE
        }

        image
        {
            function        = BOX
            state           = PRELIGHT
            recolorable     = TRUE
            file            = "Buttons/button-prelight.png"
            border          = { 2, 2, 2, 2 }
            stretch         = TRUE
        }

        image
        {
            function        = BOX
            state           = ACTIVE
            file            = "Buttons/button-pressed.png"
            border          = { 2, 2, 2, 2 }
            stretch         = TRUE
